@using EntityLayer.Concrete


@{
    ViewData["Title"] = "BikeDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="product-details-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-12 col-xs-12 mb-lm-30px mb-md-30px mb-sm-30px">
                <!-- Swiper -->
                <div class="swiper-container zoom-top">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="~/hmarthtml-10/hmart/assets/images/product-image/@Model.Image" alt="">
                            <a class="venobox full-preview" data-gall="myGallery" href="~/hmarthtml-10/hmart/assets/images/product-image/@Model.Image">
                                <i class="fa fa-arrows-alt" aria-hidden="true"></i>
                            </a>
                        </div>
                       @* <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image1" alt="">
