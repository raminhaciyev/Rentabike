                     @*Add Arrows 
                    <div class="swiper-buttons">
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>*@
                </div>
            </div>
            <div class="col-lg-6 col-sm-12 col-xs-12" data-aos="fade-up" data-aos-delay="200">
                <div class="product-details-content quickview-content ml-25px">
                    <h2>@Model.Title</h2>
                    <div class="pricing-meta">
                        <ul class="d-flex">
                            <li class="new-price">$@Model.Price</li>
                        </ul>
                    </div>
                    <p class="mt-30px">@Model.Description</p>
                    <div class="pro-details-categories-info pro-details-same-style d-flex m-0">
                        <span>Category:</span>
                        <ul class="d-flex">
                            <li>
                                <a href="#">@Model.Category</a>
</li>
                        </ul>
                    </div>
                    <div class="pro-details-categories-info pro-details-same-style d-flex m-0">
                        <span>Material: </span>
                        <ul class="d-flex">
                            <li>
                                <a href="#">@Model.Material </a>
                            </li>
                        </ul>
                    </div>
                    <div class="pro-details-categories-info pro-details-same-style d-flex m-0">
                        <span>Dimensions: </span>
                        <ul class="d-flex">
                            <li>
                                <a href="#">@Model.Dimensions </a>
                            </li>
                        </ul>
                    </div>
                    
                </div>
                <!-- product details description area start -->
                <div class="description-review-wrapper">
                    <div class="description-review-topbar nav">
                        <button data-bs-toggle="tab" data-bs-target="#des-details2">Requirements</button>
                        <button class="active" data-bs-toggle="tab" data-bs-target="#des-details1">Rules</button>
                        <button data-bs-toggle="tab" data-bs-target="#des-details3">Reservation</button>
                    </div>
                    <div class="tab-content description-review-bottom">
                        <div id="des-details2" class="tab-pane">
                            <div class="product-anotherinfo-wrapper text-start">
                                <p>
                                    @Model.Requirements
                                </p>
                            </div>
                        </div>
                        <div id="des-details1" class="tab-pane active">
                            <div class="product-description-wrapper">
                                <p>
                                    @Model.Rules
                                </p>
                            </div>
                        </div>
                        <div id="des-details3" class="tab-pane">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ratting-form-wrapper pl-50">
                                        <h3>Make a Reservation</h3>
                                        <br />
                                        <div class="ratting-form">
                                            <form asp-action="BikeDetailsReserve" asp-controller="Default" method="post">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="rating-form-style">
                                                            <input placeholder="Name" type="text" name="ClientFullname" required="" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="rating-form-style">
                                                            <input placeholder="Email" type="email" name="ClientMail" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="rating-form-style">
                                                            <input placeholder="Phone" type="text" name="ClientPhone"/>
                                                        </div>
                                                    </div>
                                                    <input type="hidden" value="@Model.BikeId" name="BikeId" class="form-control" placeholder="Bike ID*" required="">
                                                    <div class="col-md-12">
                                                        <div class="rating-form-style form-submit">
                                                            <textarea name="ClientMessage" placeholder="Message"></textarea>
                                                            <button class="btn btn-primary btn-hover-color-primary " type="submit" value="Submit">Submit</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- product details description area end -->
            </div>
        </div>
    </div>
</div>


