                                <i class="fa fa-arrows-alt" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image2" alt="">
                            <a class="venobox full-preview" data-gall="myGallery" href="@Model.Image">
                                <i class="fa fa-arrows-alt" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image3" alt="">
                            <a class="venobox full-preview" data-gall="myGallery" href="@Model.Image">
                                <i class="fa fa-arrows-alt" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image4" alt="">
                            <a class="venobox full-preview" data-gall="myGallery" href="@Model.Image">
                                <i class="fa fa-arrows-alt" aria-hidden="true"></i>
                            </a>
                        </div>*@
                    </div>
                </div>
               <div class="swiper-container mt-20px zoom-thumbs slider-nav-style-1 small-nav">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image" alt="">
                        </div>
                       @* <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image1" alt="">
                        </div>
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image2" alt="">
                        </div>
                        <div class="swiper-slide">
                            <img class="img-responsive m-auto" src="@Model.Image3" alt="">
                        </div>
                        <div class="swiper-slide">
