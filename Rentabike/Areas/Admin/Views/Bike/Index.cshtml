@using EntityLayer.Concrete
@model List<Bike>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Bikes</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Weight</th>
        <th>Check</th>
        <th>Status</th>
        <th>Change Status</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BikeId</td>
            <td>@item.Title</td>
            <td>@item.Description.Substring(0, 3) ...</td>
            <td>@item.Price</td>
            <td>@item.Weight</td>
            <td><a href="/Default/BikeDetails/@item.BikeId" class="btn btn-outline-info">Check</a></td>
            <td>@item.Status</td>
            <td><a href="/Admin/Bike/DeleteBike/@item.BikeId" class="btn btn-outline-primary">Make True</a></td>
            <td><a href="/Admin/Bike/UpdateBike/@item.BikeId" class="btn btn-outline-success">Update</a></td>
            <td><a href="/Admin/Bike/RemoveBike/@item.BikeId" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Bike/AddBike" class="btn btn-outline-primary">Add</a>


