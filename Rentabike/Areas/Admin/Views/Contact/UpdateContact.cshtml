@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Contact</h1>
<br />
<form method="post">
    @Html.HiddenFor(x => x.ContactId)
    <div class="form-group">
        @Html.Label("Address")
        <input type="text" asp-for="Address" class="form-control" style="width:50%" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Phone")
        <input type="text" asp-for="Phone" class="form-control" style="width:50%" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Email")
        <input type="text" asp-for="Email" class="form-control" style="width:50%" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Status")
        @Html.TextBoxFor(x => x.Status, new { @class = "form-control", disabled = "disabled", @readonly = "readonly", style = "width:50%" })

        @*<input type="text" asp-for="Status" class="form-control" style="width:50%" />*@
    </div>
    <br />
    <button class="btn btn-outline-success">Save</button>
</form>

